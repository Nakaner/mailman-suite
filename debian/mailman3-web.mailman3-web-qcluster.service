[Unit]
Description=Mailman3-web HyperKitty async tasks runner
Documentation=https://hyperkitty.readthedocs.io/en/latest/install.html#asynchronous-tasks
After=network.target remote-fs.target
Requires=mailman3-web.service

[Service]
ExecStart=/usr/bin/python3 /usr/bin/django-admin qcluster --pythonpath /usr/share/mailman3-web --settings settings
User=www-data
Restart=always

[Install]
WantedBy=multi-user.target
